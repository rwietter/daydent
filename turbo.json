{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": [".env", "$PORT"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
		"start": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"release": {
			"dependsOn": ["^release"],
			"outputs": []
		},
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
