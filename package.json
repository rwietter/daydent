{
	"name": "trackraw",
	"version": "0.0.1",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build --scope=*server*",
		"start": "turbo run start --scope=*server*",
		"release": "turbo run release --scope=*server*",
		"test": "cd apps/server && yarn test",
		"dev": "turbo run dev --parallel",
		"lint": "eslint --ext .tsx,.ts apps/",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"docs": "docsify serve ./apps/docs -p 3333",
		"commit": "cz"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@turbo/codemod": "^1.5.5",
		"commitizen": "^4.2.5",
		"cz-conventional-changelog": "3.3.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"turbo": "^1.5.5"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"dependencies": {},
	"packageManager": "yarn@1.22.19",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "npx --no -- commitlint --edit",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
		}
	}
}
