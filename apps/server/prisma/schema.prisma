// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String   @map("name")
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admin")
}

model WeekSchedule {
  id                       String           @id @default(cuid())
  mondayRecord             String           @default("0") @map("monday_record")
  mondayRecordAvailable    String           @default("0") @map("monday_record_available")
  tuesdayRecord            String           @default("0") @map("tuesday_record")
  tuesdayRecordAvailable   String           @default("0") @map("tuesday_record_available")
  wednesdayRecord          String           @default("0") @map("wednesday_record")
  wednesdayRecordAvailable String           @default("0") @map("wednesday_record_available")
  thursdayRecord           String           @default("0") @map("thursday_record")
  thursdayRecordAvailable  String           @default("0") @map("thursday_record_available")
  fridayRecord             String           @default("0") @map("friday_record")
  fridayRecordAvailable    String           @default("0") @map("friday_record_available")
  createdAt                DateTime         @default(now()) @map("created_at")
  updatedAt                DateTime         @updatedAt @map("updated_at")
  DentistSchedule          DentistSchedule?

  @@map("week_schedule")
}

model DentistSchedule {
  id        String       @id @default(cuid())
  day       String
  month     String
  year      String
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  week      WeekSchedule @relation(fields: weekId, references: [id])
  weekId    String       @unique @map("week_id")

  @@map("dentist_schedule")
}
